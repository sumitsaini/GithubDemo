<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:src="@drawable/github_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/et_search"
        app:layout_constraintTop_toBottomOf="@+id/iv_logo"
        android:layout_height="@dimen/edit_text_height"
        android:layout_marginLeft="@dimen/extra_large_padding"
        android:layout_marginRight="@dimen/extra_large_padding"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:singleLine="true"
        android:layout_marginBottom="@dimen/extra_large_padding"
        android:hint="Search Author and Repo"
        android:background="@drawable/edit_ext_background"
        android:layout_width="match_parent"/>

    <Button
        android:id="@+id/btn_search"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_height"
        android:text="Search"
        android:fontFamily="sans-serif-medium"
        android:textSize="@dimen/font_l"
        android:textColor="@android:color/white"
        android:layout_margin="@dimen/extra_large_padding"
        app:layout_constraintTop_toBottomOf="@+id/et_search"
        android:background="@drawable/button_style"/>


</androidx.constraintlayout.widget.ConstraintLayout>